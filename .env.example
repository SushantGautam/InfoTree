# InfoTree .env.example
# Copy to .env and uncomment/modify what you need

# LLM Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
MODEL_NAME=gpt-4o-mini
MAX_TOKENS=4096
TIMEOUT=60

# Embeddings (if using different API from LLM)
# EMBEDDING_MODEL_API_KEY=your-embedding-api-key-here
# EMBEDDING_BASE_URL=https://api.openai.com/v1
EMBEDDING_MODEL_NAME=text-embedding-3-small
EMBEDDING_BATCH_SIZE=100

# Windowing Parameters
WINDOW_CHARS=6000
OVERLAP_CHARS=800

# Node Extraction
MIN_NODE_CHARS=300
MAX_NODE_CHARS=1200

# Deduplication
IOU_THRESHOLD=0.85

# Tree Structure
MAX_CHILDREN=10
MAX_DEPTH=4

# Retry & Parallel Processing
MAX_RETRIES=3
RETRY_DELAY=1.0
MAX_CONCURRENT_REQUESTS=10
